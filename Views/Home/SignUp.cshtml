@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model NewHope.Models.Persn
<link rel="stylesheet" href="~/Content/bootstrap.css">
<link rel="stylesheet" href="~/Content/bootstrap-theme.css">


<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
        <br><br><br><br>
        <font size="6" color="#33CCFF"> NewHope </font><font size="6" color="#415c81"> History</font>
        <p>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            NewHope is a non profit organization provided for citizens of Pakistan. New Hope was founded with the hopes of helping those, who could not find their related Doctors in their near by areas
        </p>

        <br><br><br>
        <font size="1" color="#C8C8C8"> ------------------------------------------------------------------------------------------------------------------------</font>

        <font size="6" color="#415c81"> What You Need To Know</font>
        <div>
            <img src="~/images/alfabat-A.png" /><font size="3" color="#415c81"> About Us</font>
            <p>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                To maintain a positive atmosphere while helping to resolve individual situations in a productive matter.
            </p>
            <br><br><br><br>
        </div>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-3">
        <font size="8" color="#415c81"> Sign Up</font>
        <br><br><br>

        
        @using (Html.BeginForm("SignUpGo", "Home", FormMethod.Post, new {enctype = "multipart/form-data"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/jqueryui")
            @Scripts.Render("~/bundles/jqueryval")
            
            
            @Html.TextBoxFor(model => model.fname, new { placeholder = "  First name", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.fname)<br>


            @Html.TextBoxFor(model => model.lname, new { placeholder = "  Last name", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.lname)<br>

            @Html.TextBoxFor(model => model.email, new { id = "CategorySelector1", placeholder = "  Email", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.email)<br>
            <div style="color: red" id="d1">


            </div>
            @Html.PasswordFor(model => model.password, new {placeholder = "  Password", @class = "form-control"})
            @Html.ValidationMessageFor(model => model.password)<br>
            <input required class="form-control" type="password" onblur="return validate()" name="password2" id="password2" class="nameTextField" placeholder="  Confirm Password"/><br>

            @Html.TextBoxFor(model => model.cnic, new {placeholder = "  CNIC", @class = "form-control"}) 
            @Html.ValidationMessageFor(model => model.cnic);<br>
    @Html.TextBoxFor(model => model.address, new { placeholder = "  Address", @class = "form-control" })
    @Html.ValidationMessageFor(model => model.address)<br>

    @Html.TextBoxFor(model => model.city, new { placeholder = "  City", @class = "form-control" })
    @Html.ValidationMessageFor(model => model.city)<br>

    @Html.TextBoxFor(model => model.blood, new { placeholder = "  BloodGroup", @class = "form-control" })
    @Html.ValidationMessageFor(model => model.blood)<br>

    @Html.TextBoxFor(model => model.mobile, new { placeholder = "  Mobile", @class = "form-control" })
    @Html.ValidationMessageFor(model => model.mobile)<br>


    <label class="lead">Gender </label>
    <br>
    @Html.RadioButtonFor(model => model.sex, "male", new { style = "margin-left: 7%; margin-bottom: 4%; margin-right: 2%", value = "male" })
    @Html.LabelFor(model => model.sex, "Male", new { @class = "control-label" })
    @Html.RadioButtonFor(model => model.sex, "female", new { style = "margin-left: 7%; margin-bottom: 4%; margin-right: 2%", value = "female" })
    @Html.Label("female")<br>
    @Html.ValidationMessageFor(model => model.sex)
    <br>

    <br>
    <label class="lead">Account Type </label>
    <br>

    @Html.RadioButtonFor(model => model.ac_type, "doctor", new { style = "margin-left: 7%; margin-bottom: 4%; margin-right: 2%", value = "doctor" })
    @Html.LabelFor(model => model.ac_type, "Doctor", new { @class = "control-label" })
    @Html.RadioButtonFor(model => model.ac_type, "patient", new { style = "margin-left: 7%; margin-bottom: 4%; margin-right: 2%", value = "patient" })
    @Html.Label("Patient")<br>
    @Html.ValidationMessageFor(model => model.ac_type)
    <br>



    <input type="file" name="image" />
    <br>
    <br>
    <input type="submit" value="Create account" name="submit" class="btn btn-lg btn-primary" />


        }

            



            

            
            
             
        
           
        
            



            <br><br><br><br>
        </div>
            <div class="col-md-4">

            </div>
        </div>
        <script>

            $('#CategorySelector1').change(function () {
                var value = $('#CategorySelector1').val();

                $('#d1').load('/home/ValidateEmail?email=' + value);

            });

        </script>

<script>
    function validate() {

        if (document.getElementById('password').value != document.getElementById('password2').value) {
            alert("password dose not match!!");
            return false;
        }
        return true;
    }
</script>