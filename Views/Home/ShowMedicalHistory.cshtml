@using NewHope.Models
@{
    ViewBag.Title = "ShowMedicalHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link rel="stylesheet" href="~/Content/bootstrap.css">
<link rel="stylesheet" href="~/Content/bootstrap-theme.css">

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <font size="7" color="#415c81"> Medical History</font>
        <br><br><br>
        <font size="5" color="#415c81"> Patient's Details</font>
        <br><br><br>
        <table class=" table table-bordered">
            @foreach (var s in Model)
            {
                <tr class="success">
                    <th>@s.fname @s.lname</th>
                </tr>
                
                <tr>
                    <td colspan="2"><img class="pull-right" src="~/Files/@s.img" style="width: 20% ; height: auto" /> </td>
                </tr>
                <tr>
                    <th>@s.email</th>
                </tr>
                <tr>
                    <th>@s.cnic</th>
                </tr>
                <tr>
                    <th>@s.city</th>
                </tr>
                <tr>
                    <th>@s.blood</th>
                </tr>
                <tr>
                    <th>@s.mobile</th>
                </tr>

            }
        </table>
        <br>
        <br>

        <font size="5" color="#415c81"> Diseases</font>
        <br>
        <br>

        <table class=" table table-bordered">
            <tr><th>Disease</th><th>Condition</th><th>Start Date</th><th>End Date</th></tr>
            @foreach (var s in ViewBag.DHistory)
            {
                <tr>
                    <td>@s.dname</td>
                    <td>@s.condition</td>
                    <td>@s.start_d</td>
                    <td>@s.end_d</td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-2"></div>
</div>
<br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>


